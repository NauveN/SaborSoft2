@page "{id:int}"
@model SaborSoft2.Pages.Inventarios.EditModel

@{
    ViewData["Title"] = "Actualizar inventario";
}

<h1 class="mb-3">Actualizar inventario</h1>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Inventario.Codigo" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Inventario.Descripcion" class="form-label">Ingrediente / Producto</label>
                            <input asp-for="Inventario.Descripcion" class="form-control" />
                            <span asp-validation-for="Inventario.Descripcion" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Inventario.Stock" class="form-label">Cantidad disponible</label>
                            <input asp-for="Inventario.Stock" class="form-control" />
                            <span asp-validation-for="Inventario.Stock" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Inventario.UnidadMedida" class="form-label">Unidad de medida</label>
                            <input asp-for="Inventario.UnidadMedida" class="form-control" />
                            <span asp-validation-for="Inventario.UnidadMedida" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Inventario.FechaAdquisicion" class="form-label">Fecha de adquisición</label>
                            <input asp-for="Inventario.FechaAdquisicion" class="form-control" type="date" />
                            <span asp-validation-for="Inventario.FechaAdquisicion" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Inventario.StockMinimo" class="form-label">Stock mínimo</label>
                            <input asp-for="Inventario.StockMinimo" class="form-control" />
                            <span asp-validation-for="Inventario.StockMinimo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-outline-secondary">Volver al listado</a>
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
