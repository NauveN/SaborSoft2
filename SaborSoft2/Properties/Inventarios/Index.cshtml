@page
@model SaborSoft2.Pages.Inventarios.IndexModel

@{
    ViewData["Title"] = "Inventario";
}

<h1 class="mb-3">Gestión de inventario</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label asp-for="SearchNombre" class="form-label">Nombre del ingrediente</label>
                <input asp-for="SearchNombre" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="FechaDesde" class="form-label">Desde</label>
                <input asp-for="FechaDesde" class="form-control" type="date" />
            </div>
            <div class="col-md-3">
                <label asp-for="FechaHasta" class="form-label">Hasta</label>
                <input asp-for="FechaHasta" class="form-control" type="date" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <div class="form-check">
                    <input asp-for="SoloConStock" class="form-check-input" />
                    <label asp-for="SoloConStock" class="form-check-label">Solo con stock</label>
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Limpiar</a>
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-success">Registrar ingrediente</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Ingrediente</th>
            <th>Cantidad</th>
            <th>Unidad</th>
            <th>Stock mínimo</th>
            <th>Fecha adquisición</th>
            <th>Última actualización</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Inventarios)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.Stock</td>
                <td>@item.UnidadMedida</td>
                <td>@item.StockMinimo</td>
                <td>@item.FechaAdquisicion.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaActualizacion?.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-end">
                    <a asp-page="Edit" asp-route-id="@item.Codigo" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-page="Details" asp-route-id="@item.Codigo" class="btn btn-sm btn-outline-secondary">Detalles</a>
                    <a asp-page="Delete" asp-route-id="@item.Codigo" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
