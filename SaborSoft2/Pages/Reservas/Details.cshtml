@page "{id:int}"
@model SaborSoft2.Pages.Reservas.DetailsModel

@{
    ViewData["Title"] = "Detalle de reserva";
}

<h1 class="mb-3">Detalle de reserva</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Código de reserva</dt>
            <dd class="col-sm-9">
                <strong>@Model.Reserva.CodigoUnico</strong>
                <span class="text-muted">(preséntelo al llegar al restaurante)</span>
            </dd>


            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Reserva.CedulaNavigation?.Nombre (@Model.Reserva.Cedula)</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.Reserva.Fecha.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Tipo de reserva</dt>
            <dd class="col-sm-9">@Model.Reserva.TipoReserva?.TipoReserva1</dd>

            <dt class="col-sm-3">Personas</dt>
            <dd class="col-sm-9">@Model.Reserva.Cantidad</dd>

            <dt class="col-sm-3">Mesas / horarios</dt>
            <dd class="col-sm-9">
                @if (Model.Reserva.Mesas != null && Model.Reserva.Mesas.Any())
                {
                    <ul class="mb-0">
                        @foreach (var mesa in Model.Reserva.Mesas)
                        {
                            <li>Mesa @mesa.Codigo - @mesa.Disponibilidad?.Disponibilidad1</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">Sin mesa asociada</span>
                }
            </dd>
        </dl>

        <div class="mt-3 d-flex justify-content-between">
            <a asp-page="Index" class="btn btn-outline-secondary">Volver al listado</a>
            <div>
                <a asp-page="Edit" asp-route-id="@Model.Reserva.Codigo" class="btn btn-primary me-1">Editar</a>
                <a asp-page="Delete" asp-route-id="@Model.Reserva.Codigo" class="btn btn-outline-danger">Cancelar</a>
            </div>
        </div>
    </div>
</div>
