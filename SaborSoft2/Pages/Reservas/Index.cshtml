@page
@model SaborSoft2.Pages.Reservas.IndexModel

@{
    ViewData["Title"] = "Gestión de reservas";
}

<h1 class="mb-3">Gestión de reservas</h1>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label asp-for="CedulaFiltro" class="form-label">Cédula</label>
                <input asp-for="CedulaFiltro" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="FechaFiltro" class="form-label">Fecha</label>
                <input asp-for="FechaFiltro" class="form-control" type="date" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Buscar</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Limpiar</a>
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-success">Registrar nueva reserva</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Código interno</th>
            <th>Código cliente</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Cédula</th>
            <th>Tipo</th>
            <th>Personas</th>
            <th>Mesas / horarios</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Reservas)
        {
            <tr>
                <td>@r.Codigo</td>
                <td>@r.CodigoUnico</td>
                <td>@r.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@r.CedulaNavigation?.Nombre</td>
                <td>@r.Cedula</td>
                <td>@r.TipoReserva?.TipoReserva1</td>
                <td>@r.Cantidad</td>
                <td>
                    @if (r.Mesas != null && r.Mesas.Any())
                    {
                        <ul class="mb-0">
                            @foreach (var m in r.Mesas)
                            {
                                <li>Mesa @m.Codigo - @m.Disponibilidad?.Disponibilidad1</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">Sin mesa</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-page="Edit" asp-route-id="@r.Codigo" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-page="Details" asp-route-id="@r.Codigo" class="btn btn-sm btn-outline-secondary">Detalles</a>
                    <a asp-page="Delete" asp-route-id="@r.Codigo" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
