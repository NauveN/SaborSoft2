@page
@model SaborSoft2.Pages.Mesas.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Edit</h1>

<h4>Mesa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mesa.Codigo" />
            <input type="hidden" asp-for="Mesa.CodigoReserva" />
            <div class="form-group">
                <label asp-for="Mesa.Cantidad" class="control-label"></label>
                <input asp-for="Mesa.Cantidad" class="form-control" />
