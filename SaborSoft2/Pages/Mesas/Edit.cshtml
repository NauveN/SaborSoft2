            </div>
            <div class="form-group">
                <label asp-for="Mesa.DisponibilidadId" class="control-label"></label>
                <select asp-for="Mesa.DisponibilidadId" class="form-control" asp-items="ViewBag.DisponibilidadId" ></select>
                <span asp-validation-for="Mesa.DisponibilidadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
