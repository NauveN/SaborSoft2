@page
@model SaborSoft2.Pages.Usuarios.IndexModel

@{
    ViewData["Title"] = "Gestión de usuarios";
}

<h1 class="mb-3">Gestión de usuarios</h1>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label asp-for="SearchCedula" class="form-label">Cédula</label>
                <input asp-for="SearchCedula" class="form-control" />
            </div>
            <div class="col-md-5">
                <label asp-for="SearchNombre" class="form-label">Nombre</label>
                <input asp-for="SearchNombre" class="form-control" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Buscar</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Limpiar</a>
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-success">Nuevo usuario</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Tipo</th>
            <th>Fecha registro</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Usuarios)
        {
            <tr>
                <td>@u.Cedula</td>
                <td>@u.Nombre</td>
                <td>@u.CorreoElectronico</td>
                <td>@u.TipoUsuario?.TipoUsuario1</td>
                <td>@u.FechaRegistro.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <a asp-page="Edit" asp-route-id="@u.Cedula" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-page="Details" asp-route-id="@u.Cedula" class="btn btn-sm btn-outline-secondary">Detalles</a>
                    <a asp-page="Delete" asp-route-id="@u.Cedula" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
