@page
@model SaborSoft2.Pages.Usuarios.CreateModel

@{
    ViewData["Title"] = "Nuevo usuario";
}

<h1 class="mb-3">Nuevo usuario</h1>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="Usuario.Cedula" class="form-label"></label>
                            <input asp-for="Usuario.Cedula" class="form-control" />
                            <span asp-validation-for="Usuario.Cedula" class="text-danger"></span>
                        </div>

                        <div class="col-md-8">
                            <label asp-for="Usuario.Nombre" class="form-label"></label>
                            <input asp-for="Usuario.Nombre" class="form-control" />
                            <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Usuario.CorreoElectronico" class="form-label">Correo electrónico</label>
                            <input asp-for="Usuario.CorreoElectronico" class="form-control" type="email" />
                            <span asp-validation-for="Usuario.CorreoElectronico" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Tipo de usuario</label>
                            <select asp-for="Usuario.TipoUsuarioId" class="form-select"
                                    asp-items="Model.TiposUsuarioSelectList">
                                <option value="">-- Seleccione tipo --</option>
                            </select>
                            <span asp-validation-for="Usuario.TipoUsuarioId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-outline-secondary">Volver</a>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
